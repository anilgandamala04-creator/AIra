PORT=5000
AI_PROVIDER=openrouter # options: openrouter, ollama, mistral

# Frontend URL for CORS (comma-separated). In dev with Vite proxy, optional. For production, set to your frontend origin(s).
# FRONTEND_URL=http://localhost:5173,http://localhost:5174,https://your-app.web.app

# Request timeout for AI operations (ms). Default: 120000 (2 min) for long teaching content
# AI_REQUEST_TIMEOUT_MS=120000

# API Keys
OPENROUTER_API_KEY=your_openrouter_key_here
MISTRAL_API_KEY=your_mistral_key_here

# Local AI (Ollama)
OLLAMA_BASE_URL=http://localhost:11434/v1

# Models
LLAMA_MODEL=meta-llama/llama-3.1-8b-instruct:free
MISTRAL_MODEL=mistralai/mistral-7b-instruct:free

# Firebase Admin (for verifying frontend ID tokens) â€” same project as frontend (airaedtech)
# Option A: Service account key fields (from Firebase Console > Project Settings > Service Accounts)
FIREBASE_PROJECT_ID=airaedtech
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Option B: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./path-to-serviceAccountKey.json
