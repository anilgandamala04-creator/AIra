{
  "name": "ai-tutor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "open-app": "node scripts/open-browser.js",
    "health-check": "node scripts/health-check.js",
    "dev:backend": "npm run dev --prefix backend",
    "dev:all": "concurrently -n front,back -c blue,green \"npm run dev\" \"npm run dev:backend\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "verify": "node verify-deployment.js",
    "deploy": "npm run verify && npm run build && npm run deploy:hosting && npm run deploy:functions && npm run deploy:rules",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore,storage"
  },
  "dependencies": {
    "firebase": "^11.0.0",
    "framer-motion": "^11.15.0",
    "i18next": "^24.2.1",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.2.0",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "concurrently": "^9.1.0"
  }
}
