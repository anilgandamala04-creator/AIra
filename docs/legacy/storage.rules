rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // ============================================================================
    // Helper Functions
    // ============================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Get user plan from Firestore
    function getUserPlan() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.plan;
    }
    
    // Check if user has required plan or higher
    function hasPlan(minPlan) {
      if (!isAuthenticated()) return false;
      let plan = getUserPlan();
      let planOrder = {'simple': 1, 'pro': 2, 'enterprise': 3};
      return planOrder[plan] >= planOrder[minPlan];
    }
    
    // Validate file type
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }
    
    // Validate file size (10MB max for Simple, 50MB for Pro/Enterprise)
    function isValidFileSize() {
      let maxSize = hasPlan('pro') ? 50 * 1024 * 1024 : 10 * 1024 * 1024;
      return request.resource.size < maxSize;
    }
    
    // ============================================================================
    // User Files
    // ============================================================================
    
    // User uploads (avatars, documents, etc.)
    match /users/{userId}/{allPaths=**} {
      // Users can read their own files
      allow read: if isOwner(userId);
      
      // Users can upload their own files with validation
      allow write: if isOwner(userId)
        && isValidFileType()
        && isValidFileSize();
      
      // Users can delete their own files
      allow delete: if isOwner(userId);
    }
    
    // Chat document uploads (Pro/Enterprise only)
    match /chat_documents/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) && hasPlan('pro');
      allow write: if isOwner(userId) && hasPlan('pro')
        && isValidFileType()
        && isValidFileSize();
      allow delete: if isOwner(userId) && hasPlan('pro');
    }
    
    // Studio resource uploads (Pro/Enterprise only)
    match /studio_uploads/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) && hasPlan('pro');
      allow write: if isOwner(userId) && hasPlan('pro')
        && isValidFileType()
        && isValidFileSize();
      allow delete: if isOwner(userId) && hasPlan('pro');
    }
    
    // AI-generated visuals (if persisted)
    match /ai_generated/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if false; // Only Cloud Functions can write
      allow delete: if isOwner(userId);
    }
    
    // ============================================================================
    // Public Assets
    // ============================================================================
    
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins via Cloud Functions
    }
    
    // ============================================================================
    // Default Deny
    // ============================================================================
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
